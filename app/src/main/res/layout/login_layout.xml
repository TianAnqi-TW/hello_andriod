<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:src="@drawable/fill_1" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/logoImageView"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77.7dp"
        android:hint="Username"
        android:inputType="text"
        android:textAllCaps="false"
        android:textColor="#e4e4e4"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/usernameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#e4e4e4"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />
    <CheckBox
        android:id="@+id/rememberMeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_alignStart="@id/passwordEditText"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="Remember me"
        android:textColor="#222222"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_alignEnd="@id/passwordEditText"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="1dp"
        android:text="Forgot password?"
        android:textColor="#222222"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/rememberMeCheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22.5dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#1f4ba5"
        android:gravity="center"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/connectWithTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:text="or connect with"
        android:textColor="#b2b2b2"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginTop="26.5dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/facebookLogoImageView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/connectWithTextView"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_alignStart="@id/loginButton"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/fb" />

    <ImageView
        android:id="@+id/twitterLogoImageView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/connectWithTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/facebookLogoImageView"
        android:src="@drawable/tw" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/twitterLogoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="85.5dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Sign Up with E-mail"
        android:textColor="#1f4ba5"
        android:textSize="12sp"
        android:textStyle="normal"
        app:strokeColor="#1f4ba5"
        app:strokeWidth="1dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>