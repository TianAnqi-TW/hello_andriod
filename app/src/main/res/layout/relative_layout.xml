<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity"
    >

    <TextView
        android:id="@+id/topLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="#00FF00"
        android:text="程序员"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/topRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="244dp"
        android:background="#00FF00"
        android:text="程序员鼓励师"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/bottomLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="35dp"
        android:background="#00FF00"
        android:text="UI设计师"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/bottomRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="35dp"
        android:background="#00FF00"
        android:text="程序员"
        tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/centerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00FF00"
            android:text="中间"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/topTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/centerTextView"
            android:layout_centerHorizontal="true"
            android:background="#00FF00"
            android:layout_marginBottom="6dp"
            android:text="上"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/leftTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/centerTextView"
            android:layout_centerVertical="true"
            android:background="#00FF00"
            android:layout_marginEnd="6dp"
            android:text="左"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/rightTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/centerTextView"
            android:layout_centerVertical="true"
            android:background="#00FF00"
            android:layout_marginStart="6dp"
            android:text="右"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/bottomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerTextView"
            android:layout_centerHorizontal="true"
            android:background="#00FF00"
            android:layout_marginTop="6dp"
            android:text="下"
            tools:ignore="HardcodedText" />
</RelativeLayout>
